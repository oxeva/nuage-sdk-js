# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab
end_of_line = lf

[package.json]
indent_size = 2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
